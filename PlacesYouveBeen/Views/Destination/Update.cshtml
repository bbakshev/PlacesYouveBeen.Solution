<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Place to Update!</title>
    <link 
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" 
      rel="stylesheet" 
      integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" 
      crossorigin="anonymous">
  </head>
  <body>
    @using PlacesYouveBeen.Models;
      <form action="/destinations/patch" method="post">
        <input type="hidden" id="id" name="id" value="@Model.Id">
        <label for="city">Update Name</label>
        <input id="city" name="city" type="text" value="@Model.CityName">
        <label for="image">Update Image Link</label>
        <input id="image" name="image" type="text" value="@Model.Image">
        <label for="journal">Update your experience!</label>
        <textarea id="journal" name="journal">@Model.Journal</textarea>
        <button type="submit">Update</button>
      </form>
  </body>
</html>